<div class="col-4" >
  <div class="card my-2">
    <div class="card-body">
      <h5 class="card-title">Filter Result</h5>
      <div class="form-check">
        <%= radio_button("search", "filter", "all", {class: 'form-check-input'}) %>
        <%= label_tag "All" %>
      </div>
      <div class="form-check">
        <%= radio_button("search", "filter", "jc", {class: 'form-check-input'}) %>
        <%= label_tag "JobCrop" %>
      </div>
      <div class="form-check">
        <%= radio_button("search", "filter", "gd", {class: 'form-check-input'}) %>
        <%= label_tag "Glassdoor" %>
      </div>
      <div class="form-check">
        <%= radio_button("search", "filter", "i", {class: 'form-check-input'}) %>
        <%= label_tag "Indeed" %>
      </div>
      <div class="form-check">
        <%= radio_button("search", "filter", "js", {class: 'form-check-input'}) %>
        <%= label_tag "Jobstreet" %>
      </div>
    </div>
  </div>
</div>

<script>
$('input[name="search[filter]"]').on('change', function(){
  if(this.value == 'all') {
    $('div.jc').fadeIn();
    $('div.gd').fadeIn();
    $('div.js').fadeIn();
    $('div.i').fadeIn();
  }
  else if (this.value == 'jc') {
    $('div.jc').fadeIn();
    $('div.gd').fadeOut();
    $('div.js').fadeOut();
    $('div.i').fadeOut();
  }
  else if (this.value == 'gd') {
    $('div.gd').fadeIn();
    $('div.js').fadeOut();
    $('div.jc').fadeOut();
    $('div.i').fadeOut();
  }
  else if (this.value == 'i') {
    $('div.i').fadeIn();
    $('div.jc').fadeOut();
    $('div.gd').fadeOut();
    $('div.js').fadeOut();
  }
  else if (this.value == 'js') {
    $('div.js').fadeIn();
    $('div.jc').fadeOut();
    $('div.gd').fadeOut();
    $('div.i').fadeOut();
  }
})
</script>
