
<%= render partial: "employers/employer_navbar" %>
<h1><%= @job.title %></h1>
<p><%= sanitize @job.details %></p>

<p><strong>Location:</strong> <%= @job.location %> </p> 
<p><strong>Salary:</strong> $ <%= @job.salary %></p>

<!-- Insert job photos -->
<% if @job.photos != nil %>
	<%= image_tag(@job.photos) %>
<% end %>

<%= link_to 'Edit', edit_employer_job_path(@job.id) %> |
<%= link_to 'Delete', delete_employer_job_path(@job.id), method: :delete, data: {confirm: "Are you sure?" } %> |
<p>Posted on <%= @job.created_at %></p>
<p>Updated on <%= @job.updated_at %></p>