<div class="card project my-2">
  <div class="card-body">
    <div id="projectTitle" class="d-flex flex-row">
      <p class="card-title m-0 font-weight-bold mr-auto">Projects</p>
      <% if current_user.own_profile?(@user) %>
        <%=link_to new_user_project_path(@user.id), remote:true do %>
          <i class="text-primary fas fa-plus add-project" style="font-size:18px;" id="addProject"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="projects-list">
  <%= render partial: 'projects/projects-timeline'%>
</div>

<script>
$('.add-project').hide();
$('#projectTitle').on('mouseover', function(){
  $('.add-project').show();
}).on('mouseleave', function(){
  $('.add-project').hide();
})
</script>
