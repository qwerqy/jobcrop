<div class="modal" id="uploadAvatar" tabindex="-1" role="dialog" aria-labelledby="uploadAvatar" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_with scope: :user, url: user_path(@user.id), method: 'PATCH' do |form| %>
          <div class="form-group">
            <%= form.label "via Local", class: 'text-muted' %>
            <%= form.file_field :image, class: 'form-control-file' %>
          </div>
          <div class="form-group">
            <%= form.label "via URL", class:'text-muted'%>
            <%= form.text_field :remote_image_url, class: 'form-control' %>
          </div>
          <%= form.submit "Upload", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
