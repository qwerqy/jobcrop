
<%= render partial: "navbar/employer_navbar" %>
<div class="container-fluid">
	<div class="row">
		<div class="col-2 bg-white border-right">
			<%=render partial: 'navbar/employer_sidebar'%>
		</div>
		<div class="col-10 py-3 container-fluid">
			<div class="border-bottom mb-3">
				<h3 class="text-center font-weight-bold text-secondary">Applicant Analysis</h3>
			</div>
			<h5 class=""><span class="font-weight-bold">Applicants:</span> <%= @jobhunter_data.count %></h5>

			<div class="row">
				<% @database.each do |d,| %>
					<div class="col-3 mb-3">
						<div class="card">
							<div class="card-body">
								<%= pie_chart(d[:data], title: d[:title], messages: {empty: "No data"}) %>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
