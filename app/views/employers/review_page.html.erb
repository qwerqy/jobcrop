
<%= render partial: "employers/employer_navbar" %>
<h1><%= @company.name %> Reviews</h1>
<h2>Overall rating: <%= @overall_rating %> / 10</h2>
<br>
<% @review.each do |r| %>
	<h2><%= r.title %></h2>
	<p>by <%= r.jobhunter.user.name %></p>
	<p><strong>Rating: <%= r.rating %> / 10</strong></p>
	<p><%= r.description %></p>
	<p>Posted on <%= r.created_at %></p>
	<hr>
<% end %>
