<!-- partial form for experience -->

<%= form_for [current_user, @experience] do |f| %>
	
	<%= f.label :job_title %>
	<%= f.text_field :job_title %>

	<%= f.label :job_description %>
	<%= f.text_field :job_description %>

	<%= f.label :company_name %>
	<%= f.text_field :company_name %>

	<%= f.label :location %>
	<%= f.text_field :location %>

	<%= f.label :specialization %>
	<%= f.text_field :specialization %>

	<%= f.label :role %>
	<%= f.text_field :role %>

	<%= f.label :country %>
	<%= f.text_field :country %>

	<%= f.label :monthly_salary %>
	<%= f.number_field :monthly_salary %>

	<%= f.label :position_level %>
	<%= f.text_field :position_level %>

	<%= f.label :started_at %>
	<%= f.date_field :started_at %>

	<%= f.label :ended_at %>
	<%= f.date_field :ended_at %>

	<%= f.submit %>

<% end %>