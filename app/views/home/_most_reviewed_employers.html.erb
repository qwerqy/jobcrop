<div class="card my-2">
  <div class="card-body">
    <h5><strong>Most Reviewed Employers</strong></h5>
    <div class="d-flex flex-wrap flex-row my-2 justify-content-center">
      <% if @employers.present? %>
        <%@employers.limit(8).each do |employer| %>
          <%=link_to company_path(employer.company.id) do %>
            <%=image_tag(employer.company.logo_url, class: 'rounded-circle m-2', style: 'width:50px;height:50px;')%>
          <% end %>
        <%end%>
      <% end %>
    </div>
  </div>
</div>
