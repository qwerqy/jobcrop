<div class="px-4 py-3">
  <%= form_with scope: :session, url: session_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: 'email@example.com' %>
    </div>
    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control', placeholder: 'Password' %>
      <!-- <a class="text-muted small-font" href="#">Forgot password?</a> -->
      <%= link_to "Forgot password?", new_password_path, class: 'text-muted small-font' %>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="dropdownCheck">
      <label class="form-check-label" for="dropdownCheck">
        Remember me
      </label>
    </div>
    <%= form.submit "Sign In", class:'btn btn-primary w-100 mt-3' %>
    <a class="w-100" href="#"><img class="mx-auto d-block mt-2" src='assets/btn_googlesignin.png'/></a>

  <div class="dropdown-divider"></div>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to 'New around here? Sign Up', sign_up_path, class: 'dropdown-item text-muted', data: {toggle: 'modal', target: '#signup'} %>
    <% end %>
  <% end %>
</div>
