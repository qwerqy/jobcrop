<%=form_with(scope: :company, url: company_index_path(@employer.id), method: 'POST', local: true) do |f| %>
  <div class="form-group">
    <h5 class="text-muted">Upload your company logo</h5>
    <%= f.file_field :logo, class: 'form-control-file' %>
  </div>
  <div class="form-group">
    <h5 class="text-muted">What's your company name?</h5>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <h5 class="text-muted">Where is it located at?</h5>
    <%= f.text_field :location, class: 'form-control' %>
  </div>
  <div class="form-group">
    <h5 class="text-muted">Give a brief intro about your company.</h5>
    <%= f.text_area :background, class: 'form-control', rows: '8' %>
  </div>
  <div class="form-group">
    <h5 class="text-muted">How many employees does your company have?</h5>
    <%= f.select(:size,
                  options_for_select([
                    ['0-10','0-10'],
                    ['10-50','10-50'],
                    ['50-100', '50-100'],
                    ['100-500', '100-500'],
                    ['500+','500+']
                  ]), {},
                  {class: 'custom-select w-50 d-block mx-auto'}) %>
  </div>
  <hr/>
  <div class="form-inline">
      <%= f.text_field :website, class: 'form-control mx-2', placeholder: 'Website(Optional)' %>
      <%= f.text_field :telephone, class: 'form-control mx-2', placeholder: 'Office Tel' %>
  </div>
  <%=f.submit "Create Employer Account", class: "m-3 btn btn-primary d-block mx-auto btn-lg" %>


<% end %>
