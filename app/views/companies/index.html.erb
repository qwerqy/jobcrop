<%= render partial: "navbar/employer_navbar" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-2 bg-white border-right">
      <%=render partial: 'navbar/employer_sidebar'%>
    </div>
    <div class="col-10 py-3">
      <div class="card">
        <div class="card-body">
          <%=image_tag(@company.logo_url, class:'rounded-circle d-block mx-auto mb-3', style: "width:150px;height:150px;")%>
          <h5 class="font-weight-bold text-center"><%= @company.name %></h5>
          <p class="text-center"><%= @company.location %></p>
          <hr/>
          <ul class="nav">
            <li class="nav-item mx-auto">Followers: </li>
            <li class="nav-item mx-auto">Jobs: </li>
          </ul>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-9">
          <div class="card mb-2">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">Company Photos</h5>
            </div>
          </div>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">Company Background</h5>
              <p class="card-text"><%= sanitize @company.background %></p>
            </div>
          </div>
        </div>
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title font-weight-bold">Company Information<h5>
                <ul class="list-unstyled">
                  <li>
                    <p class="medium-font mb-1">Company Size:</p>
                    <p class="medium-font"><%= @company.size%> employees</p>
                  </li>
                  <li>
                    <p class="medium-font mb-1">Company Website:</p>
                    <p class="medium-font"><%= @company.website%></p>
                  </li>
                  <li>
                    <p class="medium-font mb-1">Office Tel:</p>
                    <p class="medium-font"><%= @company.telephone%></p>
                  </li>
                </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
