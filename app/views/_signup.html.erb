<div class="modal" id="signup" tabindex="-1" role="dialog" aria-labelledby="signup" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content p-3 bg-light">
      <div class="modal-body">
        <a class="w-100" href="#">
          <img class="d-block mx-auto" src='assets/btn_googlesignin.png'/>
          <p class="text-center text-muted small-font">We'll never post anything without your permission.</p>
        </a>
        <div class="row align-item-middle">
          <div class="col"><hr></div>
          <div class="col-1">
            <p class="d-block mx-auto text-muted m-0 text-center my-2 small-font">OR</p>
          </div>
          <div class="col"><hr></div>
        </div>
        <form>
          <div class="row form-group">
            <div class="col">
              <input type="text" class="form-control" placeholder="First name">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last name">
            </div>
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Email Address">
          </div>
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Password">
          </div>

          <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        </form>
      </div>
      <div class="modal-footer">
        <p class="text-muted m-0 d-block mx-auto small-font">Already have an account? Sign In</p>
      </div>
    </div>
  </div>
</div>
